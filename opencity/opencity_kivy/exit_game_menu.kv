#:import os os
#:import ButtonBehavior kivy.uix.behaviors.ButtonBehavior
#:import HoverBehavior opencity_kivy.hoverbehavior

#:set original_dir os.path.realpath(os.path.dirname('exit_game_menu.kv'))

<ExitGameScreen>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "horizontal"
            ImageButton:
                source: os.path.join(original_dir,"OpenCity-Main_Menu\\PNG\\Yes.png")
                on_press:
                    self.source = os.path.join(original_dir,"OpenCity-Main_Menu\\PNG\\YesClick.png")
                on_release:
                    self.source = os.path.join(original_dir,"OpenCity-Main_Menu\\PNG\\YesHover.png")
                    app.stop()
                on_enter:
                    self.source = os.path.join(original_dir,"OpenCity-Main_Menu\\PNG\\YesHover.png")
                on_leave:
                    self.source = os.path.join(original_dir,"OpenCity-Main_Menu\\PNG\\Yes.png")
            ImageButton:
                source: os.path.join(original_dir,"OpenCity-Main_Menu\\PNG\\No.png")
                on_press:
                    self.source = os.path.join(original_dir,"OpenCity-Main_Menu\\PNG\\NoClick.png")
                on_release:
                    self.source = os.path.join(original_dir,"OpenCity-Main_Menu\\PNG\\NoHover.png")
                    root.manager.current = "main_menu"
                on_enter:
                    self.source = os.path.join(original_dir,"OpenCity-Main_Menu\\PNG\\NoHover.png")
                on_leave:
                    self.source = os.path.join(original_dir,"OpenCity-Main_Menu\\PNG\\No.png")
        ImageButton:
            source: os.path.join(original_dir,"OpenCity-Main_Menu\\PNG\\Back.png")
            on_press:
                self.source = os.path.join(original_dir,"OpenCity-Main_Menu\\PNG\\BackClick.png")
            on_release:
                self.source = os.path.join(original_dir,"OpenCity-Main_Menu\\PNG\\backHover.png")
                root.manager.current = "main_menu"
            on_enter:
                self.source = os.path.join(original_dir,"OpenCity-Main_Menu\\PNG\\BackHover.png")
            on_leave:
                self.source = os.path.join(original_dir,"OpenCity-Main_Menu\\PNG\\Back.png")
